<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp">

    <RelativeLayout
        android:background="@drawable/selector_row_news"
        android:layout_width="match_parent"
        android:padding="1dp"
        android:layout_height="match_parent">

        <ImageView
            android:background="@color/colorAccent"
            android:id="@+id/iv_thumbnail"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/news_placeholder"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_thumbnail"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:text=" - "/>

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_thumbnail"
            android:layout_alignBottom="@id/iv_thumbnail"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimaryMenu"
            android:textSize="14sp"
            android:text=" Source: "/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/iv_thumbnail"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimaryMenu"
            android:textSize="14sp"
            android:text =" Date: "/>

        <!--
        <TextView
            android:id="@+id/tv_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_thumbnail"
            android:layout_below="@id/tv_title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_alignBottom="@id/iv_thumbnail"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorPrimaryMenu"
            android:textSize="12sp"
            android:text=" - "/>
            -->

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>