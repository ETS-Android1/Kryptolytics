<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fproject.cryptolitycs.com.fproject.cryptolitycs.ThemesActivity"
    tools:showIn="@layout/app_bar_settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:tint="?attr/colorPrimary"
                android:textColor="?attr/colorPrimary"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/title_activity_settings"/>

            <RadioGroup
                android:id="@+id/rg_theme"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:paddingRight="15dp"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_blue"
                    android:textColor="?attr/colorOnSecondaryLight"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:text="Blue"/>

                <RadioButton
                    android:id="@+id/rb_purple"
                    android:textColor="?attr/colorOnSecondaryLight"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:text="Purple" />

                <RadioButton
                    android:id="@+id/rb_grey"
                    android:textColor="?attr/colorOnSecondaryLight"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layoutDirection="rtl"
                    android:textAlignment="textStart"
                    android:text="Grey" />

            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
